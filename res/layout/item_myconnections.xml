<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notification_cardView"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/user_photo_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_action_account_circle_40" />

        <LinearLayout
            android:id="@+id/userDetails_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/invite_button"
            android:layout_toRightOf="@+id/user_photo_imageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_textView"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:text="" />


        </LinearLayout>



        <Button
            android:id="@+id/drop_button"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_action_account_circle_40"
            android:text="Drop"
            android:textColor="@android:color/white" />


        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_photo_imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="My Location Sharing" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

